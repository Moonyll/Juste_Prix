<Window x:Class="JP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JP"
        mc:Ignorable="d"
        Title="Juste_Prix" Height="450" Width="800">
    <StackPanel x:Name="MonPremierStackPanel">
        <Label x:Name="label">Deviner une chiffre entre 1 et 50 ?</Label>
        <TextBox Text="{Binding number, Mode=TwoWay}"></TextBox>
        <Button x:Name="Bouton" Click="Bouton_Click">Essai !</Button>
    </StackPanel>
</Window>
